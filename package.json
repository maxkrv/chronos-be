    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "@prisma/client": "^6.4.1",
    "@react-email/components": "^0.0.33",
    "@react-email/render": "^1.0.5",
    "bcrypt": "^5.1.1",
